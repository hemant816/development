<h3 class="header-facet">
    <%- displayName %>
</h3>
<ul data-facet="<%- name %>" class="facet-list">
    <%= HtmlUtils.ensureHtml(optionsHtml) %>
</ul>
<% if (listIsHuge) { %>
    <div class="toggle ">
        <button class="show-more hidden discovery-button">
            <%- gettext("Show") %>
        </button>
        <button class="show-less  discovery-button">
            <%- gettext("Hide") %> 
        </button>
    </div>
<% } %>
